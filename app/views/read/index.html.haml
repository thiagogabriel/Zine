#menulist.row
  -3.times do |col|
    .span4
      - i = col
      -for article in @articles
        -if i % 3 == 0
          .article
            %h2
              %a= link_to article.title, article
            = image_tag article.image.url(:medium)
            %p= article.summary
        - i += 1

