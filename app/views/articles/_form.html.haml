= form_for @article, :class => "form-stacked" do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label :title
    .input
      = f.text_field :title, :class => :span12
  .field.clearfix
    = f.label :summary
    .input
      = f.text_area :summary, :rows => 8, :class => :span12
  .field.clearfix
    =f.label "image", "Image file"
    .input
      =f.file_field :image, class: "span11"
  .actions
    = f.submit 'Save', :class => "btn btn-primary"
    = link_to 'Cancel', articles_path, :class => "btn"
    
