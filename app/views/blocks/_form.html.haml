= form_for [@article, @block] do |f|
  -if @block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block.errors.count, "error")} prohibited this block from being saved:"
      %ul
        - @block.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :data, 'Content'
    = f.text_area :data
  .actions
    = f.submit 'Save'
