= form_for [@article, @block] do |f|
  -if @block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block.errors.count, "error")} prohibited this block from being saved:"
      %ul
        - @block.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :order
    = f.number_field :order
  .field
    = label_tag "block[data][name]", "Name"
    = text_field_tag "block[data][name]"
  .field
    = label_tag "block[data][type]", "Type"
    = select_tag "block[data][type]", options_for_select([['Simple', 0]])
    //  .field
    //    = f.label :type, 'Type'
    //    = f.select(:type, options_for_select(['Simple', 0]))
    


  .actions
    = hidden_field_tag "block[block_type]", "image"
    = f.submit 'Save'


